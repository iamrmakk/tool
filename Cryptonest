                                        <path class="cls-5" d="M23.59,22.22a3.6,3.6,0,0,0-.13.93,3.49,3.49,0,0,0,7,0,3.12,3.12,0,0,0,0-.54,1.33,1.33,0,0,0-1.22-1l-4.26-.25A1.37,1.37,0,0,0,23.59,22.22Z"/>
